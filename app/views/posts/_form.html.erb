<%= form_with(model: post, local: true) do |form| %>
<%= render 'shared/error_message' %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :status ,"状態"%>
    <%= form.select :status ,Post.statuses_i18n.invert%>
  </div>

  <div class="field">
    <%= form.label :priority ,"優先度"%>
    <%= form.select :priority ,Post.priorities_i18n.invert%>
  </div>

  <div class="field">
    <%= form.label :deadline ,"期限"%>
    <%= form.date_select :deadline , use_month_numbers: true%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
