<%= search_form_for @q, method: :get  do |f| %>

  <div class="field">
    <%= f.label :title_cont %>
    <%= f.text_field :title_cont,placeholder: "部分一致" %>
  </div>

  <div class="field">
    <%= f.label :content_cont, placeholder: "部分一致" %>
    <%= f.text_field :content_cont %>
  </div>


  <div class="field">
    <%= f.label :status_in ,"状態"%>
    <%= f.select :status_in ,Post.statuses_i18n.invert, :include_blank => "指定なし" %>
  </div>

  <div class="field">
    <%= f.label :priority_in ,"優先度"%>
    <%= f.select :priority_in ,Post.priorities_i18n.invert, :include_blank => "指定なし" %>
  </div>

  <div class="field">
    <%= f.label :limit_in ,"期限"%>
    <%= f.date_field :limit_in , use_month_numbers: true %>
    <%# date_selectだと年、月、日付を選ぶ %>
    <%# date_fieldだとカレンダーで選べる %>
  </div>

  <div class="actions">
    <%= f.submit "検索" %>
  </div>
  <%= link_to "クリア", url_for %>
  <%= paginate @posts %>
  <% end %>