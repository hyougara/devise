<% provide(:title, "task一覧") %>
<p id="notice"><%= notice %></p>

<%= render 'search_form' %>
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>状態</th>
      <th>優先度</th>
      <th><%= sort_link(@q, :limit, "期限") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.status_i18n %></td>
        <td><%= post.priority_i18n %></td>
        <td><%= post.limit %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
